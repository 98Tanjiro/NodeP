<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des réservations en cours</title>
    <!-- Liens vers les fichiers CSS de Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Styles CSS personnalisés -->
    <style>
        body {
            background-image: url('/pngtree-an-empty-conference-room-with-a-large-table-and-dark-curtains-picture-image_2457521.jpg');
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        
        .container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(255,255,255,0.5);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(48, 45, 45, 0.1);
        }
        
        .navbar {
            background-color: rgba(255,255,255,0.5);
        }
        
        .navbar-brand {
            color: #842204 !important;
            font-weight: bold;
        }
        
        .navbar-nav .nav-link {
            color: #842204 !important;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #871618;
            animation: colorChange 5s infinite alternate;
        }

        .table {
            background-color: rgba(255,255,255,0.5);
        }

        th, td {
            color: #000;
        }

        .table th {
            background-color: rgba(255,255,255,0.5);
            color: #871618;
        }

        .table th,
        .table td {
            border: none;
        }
    </style>
</head>
<body>
    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#">Reservation of meeting room</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard" style="color: #f8f9fa;">Back</a>
                </li>
            </ul> 
        </div>
    </nav>

    <div class="container">
        <h1>list of ongoing reservations</h1>
        <% if (reservationsEnCours.length === 0) { %>
            <p>no ongoing reservation.</p>
        <% } else { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Room</th>
                        <th>start date</th>
                        <th>end date</th>
                    </tr>
                </thead>
                <tbody>
                    <% reservationsEnCours.forEach(reservation => { %>
                        <tr>
                            <td><%= reservation._id %></td>
                            <td><%= reservation.user.username %></td> 
                            <% if (reservation.room) { %> 
                                <td><%= reservation.room.name %></td> 
                            <% } else { %>
                                <td>no rooms associated</td> <!-- Affiche un message si aucune salle n'est associée -->
                            <% } %>
                            <td><%= reservation.startdate.getDate() +'/'+ (reservation.startdate.getMonth() +1)%> </td>
                            <td><%= reservation.enddate.getDate() +'/'+ (reservation.enddate.getMonth() +1)%></td>
                            <!-- Ajoutez d'autres cellules pour les autres informations de réservation -->
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>

    <!-- Liens vers les fichiers JavaScript de Bootstrap (optionnel) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
