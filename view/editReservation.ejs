<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier Réservation</title>
    <!-- Liens vers les fichiers CSS de Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Styles CSS personnalisés -->
    <style>
         body {
            background-image: url('/pngtree-an-empty-conference-room-with-a-large-table-and-dark-curtains-picture-image_2457521.jpg');
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            margin-top: 40px;
            background-color:  rgba(255,255,255,0.5);
            padding: 10px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(48, 45, 45, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #842204;
            animation: colorChange 5s infinite alternate;
        }
        
        .navbar {
            background-color:  rgba(255,255,255,0.5);
            height: 40px; /* Réduire la hauteur de la navbar */
        }
        .navbar-brand {
            color: #842204 !important;
            font-weight: bold;
        }
        .navbar-nav .nav-link {
            color: #842204 !important;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-primary {
            width: 100%;
            background-color: #842204;
            border-color: #e43a06;
        }
        .btn-primary:hover {
            background-color: #e93802;
            border-color: #842204;
        }
        .alert {
            margin-bottom: 20px;
        }
        
    </style>
</head>
<body>
    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#">Reservation of meeting room</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard" style="color: #f8f9fa;">Back</a>
                </li>
            </ul> 
        </div>
    </nav>

    <div class="container">
        <h1>Modify Reservation</h1>
        <% if (typeof errorMessage !== 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
            </div>
        <% } %>
        <% if (typeof successMessage !== 'undefined') { %>
            <div class="alert alert-success" role="alert">
                <%= successMessage %>
            </div>
        <% } %>
        <form action="/reservations/<%= reservation._id %>/edit" method="POST">
            <!-- Champ pour modifier les détails de la réservation -->
            <div class="form-group">
                <label for="startdate">Start date:</label>
                <input type="datetime-local" class="form-control" id="startdate" name="startsate" <% if (reservation && reservation.startdate) { %> value="<%= reservation.startdate.toISOString().slice(0, 16) %>" <% } %> required>
            </div>
            <div class="form-group">
                <label for="datefin">End date :</label>
                <input type="datetime-local" class="form-control" id="enddate" name="enddate" <% if (reservation && reservation.enddate) { %> value="<%= reservation.enddate.toISOString().slice(0, 16) %>" <% } %> required>
            </div>
            <input type="hidden" class="form-control" id="salleId" name="salleId" value = '<%= reservation.room %>'  required>
            <button type="submit" class="btn btn-primary">Modify</button>
        </form>
    </div>
    

    <!-- Liens vers les fichiers JavaScript de Bootstrap (optionnel) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
